# LEXICON Environment Variables

# Database connection
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/lexicon

# Redis cache connection
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your_secret_key_here
JWT_ALGORITHM=HS256

# Application settings
DEBUG=false
APP_NAME=LEXICON
ENVIRONMENT=development  # Set to 'production' for production environments

# Deployment settings
GITHUB_ORG=thedivinememe  # GitHub username or organization
GITHUB_REPO=LEXICON  # GitHub repository name
GITHUB_PAGES_URL=https://thedivinememe.github.io/LEXICON  # GitHub Pages URL

# Neural network settings
MODEL_DIM=768
DEVICE=cuda  # Use 'cpu' if no GPU is available
BATCH_SIZE=32

# Vector store settings
VECTOR_INDEX_PATH=./data/faiss_index/index.faiss
VECTOR_DIMENSION=768

# API settings
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Feature flags
ENABLE_GPU=true
ENABLE_MEME_EVOLUTION=true
ENABLE_REAL_TIME_UPDATES=true

# COREE settings
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo
